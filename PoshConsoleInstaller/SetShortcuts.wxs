<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <UI>
      <Dialog Id="SetShortcuts" Width="370" Height="270" Title="!(loc.SetShortcuts_Title)">

        <Control  Id="DesktopShortcutCheckBox" Type="CheckBox"  
		              X="20" Y="60" Width="290" Height="17"
		              Property="INSTALLDESKTOPSHORTCUT" CheckBoxValue="1"
		              Text="!(loc.SetShortcuts_DesktopSCS_Title)"/>

        <Control  Id="StartMenuShortcutCheckBox" Type="CheckBox"
		              X="20" Y="100" Width="290" Height="17"
		              Property="INSTALLSTARTMENUSHORTCUT" CheckBoxValue="1"
		              Text="!(loc.SetShortcuts_StartMenuSCS_Title)"/>

        <Control  Id="QuickStartMenuShortcutCheckBox" Type="CheckBox"
		              X="20" Y="140" Width="290" Height="17"
		              Property="INSTALLQUICKSTARTMENUSHORTCUT" CheckBoxValue="1"
		              Text="!(loc.SetShortcuts_QuickStartMenuSCS_Title)"/>
        
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Disabled="no" Text="!(loc.WixUINext)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        
        
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.SetShortcutsBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.SetShortcutsTitle)" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.SetShortcutsDescription)" />
      </Dialog>
    </UI>
  </Fragment>
</Wix>
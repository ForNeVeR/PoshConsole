<UserControl x:Class="ConsoleControl.ConsoleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MinWidth="250" MinHeight="100">
   <RichTextBox HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto" AcceptsTab="False" AcceptsReturn="False" x:Name="ConsoleTextBox">
      <FlowDocument >
         <Paragraph x:Name="Prompt" Margin="0" Padding="3">
            <InlineUIContainer><TextBox Text="" Width="Auto" HorizontalAlignment="Stretch" BorderThickness="0,0,0,0" x:Name="PromptTextBox"/></InlineUIContainer>
         </Paragraph>
      </FlowDocument>
   </RichTextBox>
</UserControl>
